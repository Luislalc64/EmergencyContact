<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emergencycontact">

    <application
        android:allowBackup="true"
        android:label="Contactos de Emergencia"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.example.emergencycontact.NuevoActivity"
            android:parentActivityName="com.example.emergencycontact.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.emergencycontact.MainActivity" />
        </activity>

        <activity android:name="com.example.emergencycontact.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.emergencycontact.VerActivity"
            android:parentActivityName="com.example.emergencycontact.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.emergencycontact.MainActivity" />
        </activity>

        <activity
            android:name="com.example.emergencycontact.EditarActivity"
            android:parentActivityName="com.example.emergencycontact.MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.emergencycontact.MainActivity" />
        </activity>
    </application>

</manifest>